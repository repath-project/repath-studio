{
  "name": "repath-studio",
  "description": "Vector Graphics Editor",
  "repository": "https://github.com/sprocketc/repath-studio",
  "author": "Konstantinos Kaloutas",
  "homepage": "https://repath.studio",
  "license": "AGPL-3.0",
  "version": "0.4.10",
  "scripts": {
    "upgrade": "npx npm-check-updates -u -x 'codemirror @radix-ui/react-context-menu @radix-ui/react-dropdown-menu @radix-ui/react-menubar @radix-ui/react-select @radix-ui/react-slider @sentry/react' && npm install && npm upgrade",
    "postinstall": "npx electron-builder install-app-deps",
    "tailwindcss:build": "npx @tailwindcss/cli -i ./src/renderer/styles.css -o ./resources/public/css/styles.css --minify",
    "tailwindcss:watch": "npx @tailwindcss/cli -i ./src/renderer/styles.css -o ./resources/public/css/styles.css --watch=always",
    "theme:build": "npx @tailwindcss/cli -i ./src/renderer/theme/default.css -o ./resources/public/css/default.css --minify",
    "theme:watch": "npx @tailwindcss/cli -i ./src/renderer/theme/default.css -o ./resources/public/css/default.css --watch=always",
    "fonts:sans": "npx shx cp -r node_modules/@fontsource/noto-sans/files/. resources/public/css/files",
    "fonts:mono": "npx shx cp -r node_modules/@fontsource/noto-sans-mono/files/. resources/public/css/files",
    "fonts": "npx npm-run-all --parallel fonts:sans fonts:mono",
    "shadow:build": "npx shadow-cljs release main preload renderer bootstrap",
    "shadow:watch": "npx shadow-cljs watch main preload renderer bootstrap browser-test portfolio",
    "dev": "npx npm-run-all --parallel fonts theme:watch tailwindcss:watch shadow:watch",
    "build": "npx npm-run-all --parallel fonts theme:build tailwindcss:build shadow:build",
    "portfolio": "npx shadow-cljs watch portfolio & npm run tailwindcss:watch",
    "electron": "npx electron .",
    "dist": "npx electron-builder",
    "clj-format": "clojure -M:format -m cljfmt.main fix src test portfolio",
    "clj-lint": "clojure -M:lint -m clj-kondo.main --lint src test portfolio",
    "check-links": "npx doc-link-checker-cli lint",
    "markdown-lint": "npx markdownlint-cli **/*.md -i node_modules -c .markdownlint.json",
    "lint": "npx npm-run-all --parallel clj-lint markdown-lint check-links",
    "clean": "rm -rf resources/public/js/* && rm -rf target && rm -rf dist && rm -rf .shadow-cljs",
    "build-report": "npx shadow-cljs run shadow.cljs.build-report renderer target/build-report.html",
    "test": "npx shadow-cljs compile karma-test && npx karma start --browsers ChromeHeadlessNoSandbox --single-run --reporters junit,dots",
    "mobile-assets": "npx @capacitor/assets generate --pwaManifestPath=/resources/public/manifest.json --assetPath=/resources/public/img --splashBackgroundColor=#dd286c --splashBackgroundColorDark=#dd286c --logoSplashScale=0.4 --iconBackgroundColor=#dd286c --iconBackgroundColorDark=#dd286c --android --ios",
    "pwa-assets": "npx @capacitor/assets generate --pwaManifestPath=/resources/public/manifest.json --assetPath=/resources/public/img/pwa --pwa"
  },
  "keywords": [
    "clojurescript",
    "shadow-cljs",
    "reagent",
    "re-frame",
    "svg",
    "vector",
    "electron"
  ],
  "build": {
    "productName": "Repath Studio",
    "appId": "studio.repath.app",
    "artifactName": "${name}-${os}.${ext}",
    "icon": "resources/public/img/icon",
    "afterSign": "electron-builder-notarize",
    "fileAssociations": [
      {
        "ext": "rps",
        "name": "Repath Studio File",
        "role": "Editor",
        "mimeType": "application/repath-studio"
      }
    ],
    "publish": [
      "github"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "default",
          "arch": [
            "universal"
          ]
        }
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "icon": false,
      "sign": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Graphics"
    }
  },
  "main": "resources/main.js",
  "devDependencies": {
    "@capacitor/android": "7.4.4",
    "@capacitor/assets": "3.0.5",
    "@capacitor/cli": "7.4.4",
    "@capacitor/core": "7.4.4",
    "@capacitor/ios": "7.4.4",
    "@capacitor/splash-screen": "7.0.3",
    "@fontsource/noto-sans": "5.2.10",
    "@fontsource/noto-sans-mono": "5.2.10",
    "@mdn/browser-compat-data": "7.1.17",
    "@radix-ui/react-context-menu": "2.2.7",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-direction": "1.1.1",
    "@radix-ui/react-dropdown-menu": "2.1.7",
    "@radix-ui/react-hover-card": "1.1.15",
    "@radix-ui/react-menubar": "1.1.7",
    "@radix-ui/react-popover": "1.1.15",
    "@radix-ui/react-scroll-area": "1.2.10",
    "@radix-ui/react-select": "2.1.7",
    "@radix-ui/react-slider": "1.2.4",
    "@radix-ui/react-switch": "1.2.6",
    "@radix-ui/react-tooltip": "1.2.8",
    "@repath-project/react-color": "2.19.4",
    "@sentry/capacitor": "2.4.0",
    "@sentry/cli": "2.57.0",
    "@sentry/react": "9.46.0",
    "@tailwindcss/cli": "4.1.16",
    "@xzdarcy/react-timeline-editor": "0.1.9",
    "acorn": "8.15.0",
    "assert": "2.1.0",
    "blobs": "2.3.0-beta.2",
    "buffer": "6.0.3",
    "cmdk": "1.1.1",
    "codemirror": "5.65.15",
    "constants": "0.0.2",
    "create-react-class": "15.7.0",
    "doc-link-checker-cli": "1.0.4",
    "electron": "39.0.0",
    "electron-builder": "26.0.12",
    "electron-builder-notarize": "1.5.2",
    "events": "3.3.0",
    "graceful-fs": "4.2.11",
    "highlight.js": "11.11.1",
    "imagetracerjs": "1.2.6",
    "js-beautify": "1.15.4",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-cljs-test": "0.1.0",
    "karma-electron": "7.3.0",
    "karma-junit-reporter": "2.0.1",
    "localforage": "1.10.0",
    "markdownlint-cli": "0.45.0",
    "mdn-data": "2.25.0",
    "npm-run-all": "4.1.5",
    "opentype.js": "1.3.4",
    "paper": "0.12.18",
    "paperjs-offset": "1.0.8",
    "path": "0.12.7",
    "path-browserify": "1.0.1",
    "perfect-freehand": "1.2.2",
    "process": "0.11.10",
    "puppeteer": "24.27.0",
    "react": "19.2.0",
    "react-d3-tree": "3.6.6",
    "react-dom": "19.2.0",
    "react-fps": "1.0.6",
    "react-frame-component": "5.2.7",
    "react-resizable-panels": "3.0.6",
    "react-svg": "16.3.0",
    "shadow-cljs": "3.2.1",
    "shx": "0.4.0",
    "snabbdom": "3.6.3",
    "sonner": "2.0.7",
    "source-map-support": "0.5.21",
    "stream-browserify": "3.0.0",
    "style-to-object": "1.0.12",
    "svg-path-bbox": "2.1.0",
    "svgpath": "2.6.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.16",
    "tw-animate-css": "1.4.0",
    "vaul": "1.1.2"
  },
  "dependencies": {
    "@electron/devtron": "2.1.0",
    "@sentry/electron": "7.2.0",
    "electron-log": "5.4.3",
    "electron-updater": "6.6.2",
    "electron-window-state": "5.0.3"
  },
  "overrides": {
    "react": "19.2.0",
    "react-dom": "19.2.0"
  }
}
